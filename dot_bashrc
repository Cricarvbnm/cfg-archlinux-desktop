# Welcome
echo "Interactive $SHELL: Welcome $USER"

# Launch interactive shell
# interactive && parent is not fish && not launched with option '-c' && in the first level
if [[ $- == *i* && $(ps --no-header --pid=$PPID --format=comm) != "fish" \
	&& -z ${BASH_EXECUTION_STRING} && ${SHLVL} == 1 ]]
then
	shopt -q login_shell && LOGIN_OPTION='--login' || LOGIN_OPTION=''
	SHELL=/usr/bin/fish exec fish $LOGIN_OPTION
fi
